/**app.wxss**/
@import "dist/common/index.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  margin: 0px 0xp 0xp 0px;
  box-sizing: border-box;
}

.font-color-red{
  color:red;
}

.nil-margin {
  margin: 0;
}

.nil-padding {
  padding: 0;
}

.test-border {
  border: 1px rgb(13, 130, 240);
  width: 100%;
  height: 100%;
}
/* 横向布局 */
.content-style-column {
  display: flex;
  flex-direction: column;
}
/* 纵向布局 */
.content-style-row {
  display: flex;
  flex-direction: row;
}

/* 固定样式居中 */

.style-content {
  justify-content: center;
  flex-direction: column;
  display: flex;
}

.width100 {
  width: 100%;
}
.width80{
  width:80%;
}

/* 文字超出部分 */
.text-style-overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
